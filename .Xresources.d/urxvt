! ===== RXVT-Unicode =====
URxvt.scrollBar:	off
URxvt.buffered:		true
URxvt.internalBorder:	30
URxvt.externalBorder:	0

! Disable ISO-4755 mode
URxvt.iso14755:		False

! TrueTransparency
!urxvt*depth:		32
!urxvt*background:	rgba:5656/5656/5656/dddd

! Cursor
URxvt.cursorBlink :	1
URxvt.saveLines:	3000

! fonts
URxvt.font:                 	xft:Fantasque sans mono:regular:size=12
URxvt.imFont:               	xft:Fantasque sans mono:regular:size=12
URxvt.boldFont:             	xft:Fantasque sans mono:bold:size=12
URxvt.italicFont:           	xft:Fantasque sans mono:italic:size=12
URxvt.boldItalicFont:     	xft:Fantasque sans mono:regular:size=12
URxvt.letterSpace:	-1

! Perl extensions
URxvt.perl-ext-common: default,clipboard,resize-font,matcher

! Clipboard
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste

! Resize-font
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show
URxvt.resize-font.step: 2

! Links / URL (matcher)
URxvt.matcher.button:	1
URxvt.url-launcher:     firefox
URxvt.colorUL:		#FCB4CC
