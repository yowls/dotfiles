#---- 1.System
alias suconf="sudo EDITOR=nvim visudo"
# Grub
alias grupdate="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias grup2date="sudo grub2-mkconfig -o /boot/grub2/grub.cfg"
alias gruconf="sudo nvim /etc/deault/grub"
