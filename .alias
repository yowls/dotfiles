#---- 1.System
alias suconf="sudo EDITOR=nvim visudo"
alias gruconf="sudo nvim /etc/default/grub"
# Processes
alias p="ps -el | grep"
alias k="pkill"
alias ka="killall"
# Others
alias ram="free -h --mega"
alias hosts="sudo nvim /etc/hosts"
alias rswap="sudo swapoff -a && sudo swapon -a"
alias lsbok="lsblk -o name,mountpoint,label,size,uuid"
# Put Colors
alias grep="grep --color=auto"
function man() {
    env \
    LESS_TERMCAP_mb=$'\e[01;31m'	\
    LESS_TERMCAP_md=$'\e[01;31m'	\
    LESS_TERMCAP_me=$'\e[0m'		\
    LESS_TERMCAP_se=$'\e[0m'		\
    LESS_TERMCAP_so=$'\e[01;44;33m'	\
    LESS_TERMCAP_ue=$'\e[0m'		\
    LESS_TERMCAP_us=$'\e[01;32m'	\
    man "$@"
}

#---- 2.Distro Aliases
if [ -n $DISTRO ]; then
	[[ $DISTRO = 'osuse' ]] && source "${HOME}/.alias.d/osuse"
	[[ $DISTRO = 'artix' ]] && source "${HOME}/.alias.d/artix"
	[[ $DISTRO = 'void' ]] && source "${HOME}/.alias.d/void"
	[[ $DISTRO = 'parrot' ]] && source "${HOME}/.alias.d/parrot"
fi

# Nya = Nya You All
alias nya="update && upgradels"
alias nyya="update && upgrade"

#---- 3.Scripts
alias wttr="curl wttr.in"

#----- 4.Configuration files | Dotfiles
#---4.1 SHELL
#alias ficonf="nvim ~/.fishrc"
#alias fifd="nvim ~/.fish.d"
alias baconf="nvim ~/.bashrc"
alias bafd="nvim ~/.bash.d"
alias zconf="nvim ~/.zshrc"
alias zfd="nvim ~/.zsh.d"
#alias zshu="source ~/.zshrc"
alias shkey="nvim ~/.alias"
#alias ohmyzconf="nvim ~/.oh-my-zsh"
#---4.2 TERMINAL
alias cdki="cd ~/.config/kitty"
alias kifd="nvim ~/.config/kitty"
alias kiconf="nvim ~/.config/kitty/kitty.conf"
alias kikey="nvim ~/.config/kitty/keybinds.conf"
#---4.3 EDITOR
alias nvconf="nvim ~/.config/nvim/init.vim"
alias nvfd="nvim ~/.config/nvim"
#---4.4 XRESOURCES
alias cdxr="cd ~/.Xresources.d"
alias xrfd="nvim ~/.Xresources.d"
alias xrconf="nvim ~/.Xresources"
alias rxr="xrdb -merge ~/.Xresources"
#---4.5 OTHERS
alias todo="nvim ~/MEGA/${DISTRO}.org"
alias neoconf="nvim ~/.config/neofetch/config.conf"
alias nfch="neofetch --source "

#---- 5.Working Directories
#---5.1 ORIGIN
alias cdyo="cd ~/Yowls"
alias yofd="nvim ~/Yowls"
alias yomd="nvim ~/Yowls/README.md"
alias yoig="nvim ~/Yowls/.gitignore"
#---5.2 SCRIPTS
alias cdsc="cd ~/scripts"
alias scfd="nvim ~/scripts"
alias scmd="nvim ~/scripts/README.md"
#---5.3 STARTPAGES
alias cdst="cd ~/startpages"
alias stfd="nvim ~/startpages"
alias stmd="nvim ~/startpages/README.md"
#---5.4 FIREFOX
alias cdf="cd ~/.mozilla/firefox/*.default-release/chrome"
alias ffd="nvim ~/.mozilla/firefox/*.default-release/chrome/"
alias fcss="nvim ~/.mozilla/firefox/*.default-release/chrome/userChrome.css"
alias fcnt="nvim ~/.mozilla/firefox/*.default-release/chrome/userContent.css"
alias fmd="nvim ~/.mozilla/firefox/*.default-release/chrome/README.md"

#---- 6.Aplications
alias v="$EDITOR"
# Trash-cli
#alias x="trash-put"
#alias xl="trash-list"
#alias xr="trash-restore"
#alias xempty="trash-empty"
# Exa
alias ls="exa --group-directories-first"
alias la="exa --group-directories-first -a"
alias ll="exa --group-directories-first -lha"
alias l="exa --group-directories-first -lh"
# Lsd
alias lx="lsd --group-dirs first"
alias lxa="lsd --group-dirs first -lhA"
alias lxt="lsd --group-dirs first --tree"
# Youtube-dl
alias audio="youtube-dl -o '${HOME}/Desktop/%(title)s.%(ext)s' -f bestaudio -x --audio-format best --audio-quality 0 -i"
alias mp3="youtube-dl -o '${HOME}/Desktop/%(title)s.%(ext)s' -x --audio-format mp3 --audio-quality 0 -i"
alias mp3t="youtube-dl -o '${HOME}/Desktop/%(title)s.%(ext)s' -x --audio-format mp3 --audio-quality 0 --write-thumbnail -i"
alias video="youtube-dl -o '${HOME}/Desktop/%(title)s.%(ext)s' -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/bestvideo+bestaudio' --merge-output-format mp4 -i"
# HBlock (hosts)
alias uhblock="hblock --backup ${HOME}/Desktop --sources ${HOME}/MEGA/hblock/hosts --whitelist ${HOME}/MEGA/hblock/whitelist.list --blacklist ${HOME}/MEGA/hblock/blacklist.list"
# WPS Office
alias word="env GTK2_RC_FILES=/usr/share/themes/Breeze/gtk-2.0/gtkrc wps -style gtk+ &"
alias ppt="env GTK2_RC_FILES=/usr/share/themes/Breeze/gtk-2.0/gtkrc wpp -style gtk+ &"
alias excel="env GTK2_RC_FILES=/usr/share/themes/Breeze/gtk-2.0/gtkrc et -style gtk+ &"
alias pdf="env GTK2_RC_FILES=/usr/share/themes/Breeze/gtk-2.0/gtkrc wpspdf -style gtk+ &"
# GIT
#https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git#aliases
alias g="git"
alias glogg="git log --all --graph --decorate --oneline"
alias gig="nvim .gitignore"
alias rmd="nvim README.md"
alias cdg="cd ~/git"

#---- 7.Common errors
alias vi=nvim
alias vim=nvim
