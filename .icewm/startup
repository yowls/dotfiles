#!/usr/bin/env bash
# you can use ~/.xprofile to autostart on login

# If itÂ´s not running, Run it
function run {
	if ! pgrep $1 ;
	then
		$@&
	fi
}

# If you want to use XFCE config tools
#run xfce-mcs-manager
